{
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "vue",
    "html",
    "yaml",
    "python",
    "json",
    "jsonc"
  ],
  "coc.preferences.colorSupport": true,
  "coc.preferences.formatOnType": false,
  "tsserver.npm": "/home/murin/.npm-global/bin/npm",
  "tsserver.formatOnType": true,
  "snippets.userSnippetsDirectory": "~/.config/nvim/snippets",
  "snippets.ultisnips.enable": false,
  "suggest.enablePreview": true,
  "suggest.maxPreviewWidth": 100,
  "diagnostic.maxWindowHeight": 20,
  "diagnostic.errorSign": "✖",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "●",
  "diagnostic.hintSign": "○",
  "diagnostic-languageserver.mergeConfig": true,
  "diagnostic-languageserver.debug": true,

  "diagnostic-languageserver.filetypes": {
    "python": ["flake8", "mypy"]
  },
  "diagnostic-languageserver.formatFiletypes": {
    "python": ["black"]
  },
  "diagnostic-languageserver.linters": {
    "mypy": {
      "rootPatterns": [".git", "pyproject.toml", "setup.py"]
    },
    "flake8": {
      "rootPatterns": [".git", "pyproject.toml", "setup.py"]
    }
  },
  "diagnostic-languageserver.formatters": {
    "black": {
      "command": "black",
      "args": ["-q", "-"],
      "rootPatterns": [".git", "pyproject.toml", "setup.py"]
    }
  },
  "sql.database": "postgresql"
}
